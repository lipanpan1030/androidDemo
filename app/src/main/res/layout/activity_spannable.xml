<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.meizu.lipan.androiddemo.spannable.SpannableActivity"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text="倒计时 24 "
        android:textSize="12sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上下左右drawable动画"
        android:textSize="20sp"
        android:drawableStart="@drawable/rotating_loading"
        android:drawableBottom="@drawable/animated_wifi"
        android:drawableTop="@drawable/animated_clock"
        android:gravity="center"/>
</LinearLayout>
